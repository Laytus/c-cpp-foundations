{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C: build active file (clang)",
            "type": "shell",
            "command": "clang",
            "args": [
                "-std=c17",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-O0",
                "-g",
                "-fsanitize=address,undefined",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${relativeFileDirname}/${fileBasenameNoExtension}"
            ],
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$gcc"],
            "options": { "cwd": "${workspaceFolder}" }
        }
    ]
}